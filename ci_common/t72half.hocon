# T7-2 machine, with zone limited to one socket (half)

t72half.default : ${commonSolaris} {
  capabilities: [solaris, t72half]
  environment : {
    XMX         : "64g"
    XMS         : "64g"
    JVM_CONFIG  : ${jvm-config.default}
    JVM         : "server"
    MACHINE_NAME: "t72half"
  }
}

builds += [
  ${bench-dacapo}              ${t72half.default} { name: "bench-dacapo-solaris-t72half" }
  ${bench-dacapo-timing}       ${t72half.default} { name: "bench-dacapo-timing-solaris-t72half" }
  ${bench-scala-dacapo}        ${t72half.default} { name: "bench-scala-dacapo-solaris-t72half" }
  ${bench-scala-dacapo-timing} ${t72half.default} { name: "bench-scala-dacapo-timing-solaris-t72half" }
  ${bench-specjvm2008}         ${t72half.default} { name: "bench-specjvm2008-solaris-t72half" }
  ${bench-specjbb2015}         ${t72half.default} { name: "bench-specjbb2015-solaris-t72half" }
  ${bench-micros-graal}        ${t72half.default} { name: "bench-jmh-micros-graal-solaris-t72half" }
]
